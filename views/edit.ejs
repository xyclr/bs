<%- include header %>
<body class=" pace-done">
<div class="pace  pace-inactive">
	<div class="pace-progress" data-progress-text="100%" data-progress="99"
		 style="-webkit-transform: translate3d(100%, 0px, 0px); transform: translate3d(100%, 0px, 0px);">
		<div class="pace-progress-inner"></div>
	</div>
	<div class="pace-activity"></div>
</div>

<div id="wrapper">
	<%- include nav %>
	<div id="page-wrapper" class="gray-bg dashbard-1">
		<div class="row border-bottom">
			<nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
				<div class="navbar-header">
					<a class="navbar-minimalize minimalize-styl-2 btn btn-primary "
					   href="http://webapplayers.com/inspinia_admin-v2.1/#"><i class="fa fa-bars"></i> </a>

					<form role="search" class="navbar-form-custom"
						  action="http://webapplayers.com/inspinia_admin-v2.1/search_results.html">
						<div class="form-group">
							<input type="text" placeholder="Search for something..." class="form-control"
								   name="top-search" id="top-search">
						</div>
					</form>
				</div>
				<ul class="nav navbar-top-links navbar-right">
					<li>
						<span class="m-r-sm text-muted welcome-message">Welcome to INSPINIA+ Admin Theme.</span>
					</li>

					<li>
						<a href="logout">
							<i class="fa fa-sign-out"></i> Log out
						</a>
					</li>
					<li>
						<a class="right-sidebar-toggle">
							<i class="fa fa-tasks"></i>
						</a>
					</li>
				</ul>

			</nav>
		</div>

		<div class="row wrapper border-bottom white-bg page-heading">
			<div class="col-lg-10">
				<h2>发布文章</h2>
				<ol class="breadcrumb">
					<li>
						<a href="./">首页</a>
					</li>
					<li class="active">
						<strong>文章编辑</strong>
					</li>
				</ol>
			</div>
			<div class="col-lg-2">
			</div>
		</div>

		<div class="wrapper wrapper-content fadeInRight" >
			<div class="row">

				<div class="col-lg-12 animated fadeInRight">
					<div class="row">
						<div class="col-lg-12">

							<div class="ibox-title">
								<div class="row">
									<div class="col-lg-3"> <h5>文章内容</h5></div>
									<div class="col-lg-9">
										<div class="ibox-tools-btn">
											<a class="btn btn-primary btn-xs" id="refresh"> <i class="fa fa-refresh btn-xs"></i> 刷新</a>
											<a class="btn btn-primary btn-xs"> <i class="fa fa-save"></i> 保存</a>
											<a class="btn btn-warning btn-xs" href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"> <i class="fa fa-trash-o"></i> 删除</a>
										</div>
									</div>
								</div>
							</div>
							<div class="ibox-content">
								<form  method="post" class="form-horizontal">
									<div class="form-group">
										<label class="col-sm-2 control-label" for="title" >标题</label>
										<div class="col-sm-10"><input type="text" class="form-control" id="title" name="title" placeholder="文章标题" value="<%= post.title %>" ></div>
									</div>

									<div class="form-group">
										<label class="col-sm-2 control-label">标签</label>
										<div class="col-sm-10">
											<div class="row">
												<div class="col-md-2"><input type="text" placeholder=".标签" class="form-control" name="tag1" value="<%= post.tags[0] %>" disabled="disabled"></div>
												<div class="col-md-3"><input type="text" placeholder=".标签" class="form-control" name="tag2" value="<%= post.tags[1] %>" disabled="disabled"></div>
												<div class="col-md-4"><input type="text" placeholder=".标签" class="form-control" name="tag3" value="<%= post.tags[2] %>" disabled="disabled"></div>
											</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-2 control-label">正文</label>
										<div class="col-sm-10">
											<textarea name="post"  class="summernote"><%= post.post %></textarea>
										</div>
									</div>
									<div class="hr-line-dashed"></div>
									<div class="form-group">
										<div class="col-sm-4 col-sm-offset-2"> <button type="submit" class="btn btn-primary">保存修改</button></div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Custom and plugin javascript -->
<script src="http://www.ndesig.com/js/inspinia.js"></script>
<script src="http://www.ndesig.com/js/pace.min.js"></script>
<script src="http://www.ndesig.com/js/common.js"></script>

<!-- include summernote -->
<link href="http://www.ndesig.com/css/summernote.css" rel="stylesheet">
<link href="http://www.ndesig.com/css/summernote-bs3.css" rel="stylesheet">
<script type="text/javascript" src="http://www.ndesig.com/js/summernote.js"></script>

<script type="text/javascript">
	$(document).ready(function() {
		$('.summernote').summernote({
			codemirror: {
				theme: 'monokai'
			}
		});
	});
</script>


</body>
</html>
