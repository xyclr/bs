<%- include header %>
<body>
<form  method="post" id="sys-box">
  <% sys.settings.forEach(function (item) { %>
  <div class="form-group">
    <label for="recipient-name" class="control-label"><%= item[1] %></label>
    <div class="input-group" data-type="<%= item[3] %>">
      <% if(item[3] === "str") {  %>
      <input type="text" class="form-control" name="<%= item[0] %>"  value="<%= item[2] %>">
      <% } else {%>
      <input type="text" class="form-control" name="<%= item[0] %>"  value="<%= item[2] %>">
         <span class="input-group-btn">
          <button class="btn btn-default del-item" >上传</button>
        </span>
      <% } %>

      <span class="input-group-btn">
        <button class="btn btn-default del-item" type="button">删除</button>
      </span>
    </div>
  </div>
  <% }) %>
  <div class="form-actions">
    <button type="button" class="btn btn-primary" id="saveSys">保存</button>&nbsp;
    <button type="button" id="addItemBtn" class="btn btn-primary"  >新增系统变量</button>
  </div>
</form>

<!-- Modal -->
<div class="modal fade" id="addItemModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="addItemModalLabel">新增系统变量</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal" action="#" id="addItemForm">
          <div class="form-group">
            <label for="recipient-name" class="col-sm-2 control-label">变量名称:</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="cfg_name" id="cfg_name" placeholder="变量名称"><span class="help-block"></span></div>


          </div>
          <div class="form-group">
            <label for="message-text" class="col-sm-2 control-label">字段名称:</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="cfg_field" id="cfg_field" placeholder="例如：cfg_xxxx"><span class="help-block"></span></div>
          </div>
          <div class="form-group">
            <label for="message-text" class=" col-sm-2 control-label">变量值:</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="cfg_value" id="cfg_value" placeholder="变量值"><span class="help-block"></span></div>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-sm-2 control-label">变类型:</label>
            <div class="col-sm-10"><span class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuType" data-toggle="dropdown" aria-expanded="true" data-type="str">
                文本
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenuType">
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#"  data-type="str">文本</a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#" data-type="file">文件（图片等媒体文件）</a></li>
              </ul>
            </span>
              <span class="help-block"></span>
            </div>
          </div>


          <div class="modal-footer">
            <button type="button" class="btn btn-default" id="closeNewItem" data-dismiss="modal">关闭</button>
            <button type="submit" class="btn btn-primary" id="saveNewItem" data-loading-text="保存中...">保存</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="../js/jquery.validate.min.js"></script>
<script type="text/javascript" src="../js/sys.js"></script>
<script type="text/javascript" src="../js/common.js"></script>
<script>
  $(function(){
    var validator = $("#addItemForm").validate({
      rules: {
        cfg_name: "required",
        cfg_field: {
          required: true,
          minlength: 5
        },
        cfg_value: {
          required: true,
          minlength: 5
        }
      },
      messages: {
        cfg_name: "请输入用户名",
        cfg_field: {
          required: "请输入密码",
          minlength: jQuery.format("密码不能小于{0}个字 符")
        },
        cfg_value: {
          required: "请输入确认密码",
          minlength: "确认密码不能小于5个字符"
        }
      },

      errorPlacement: function(error, element) {
        if ( element.is(":radio") )
          error.appendTo( element.parent().next().next() );
        else if ( element.is(":checkbox") )
          error.appendTo ( element.next() );
        else
          error.appendTo( element.next() );
      },

      debug: true
    });
  })
</script>
</body>



<%- include footer %>






